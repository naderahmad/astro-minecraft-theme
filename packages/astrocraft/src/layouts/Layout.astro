---
import type { CollectionEntry } from "astro:content";
import { Footer, Navbar } from "astrocraft:components";
import config from "astrocraft:config";

import "astrocraft:styles";

type Props = {
	data?: CollectionEntry<"pages">["data"];
	navbar?: boolean;
	footer?: boolean;
};

const { navbar = true, footer = true } = Astro.props;

const {} = config;
---

<html>
  <head>
    <slot name="head" /></head
  >
  <body class="dark flex flex-col min-h-screen p-0 m-0 bg-block-stone bg-light-level-4 scrollbar font-minecraft">
    {navbar && <Navbar />}
    <div class="grow mx-auto p-4 minecraft prose">
      <slot />
    </div>
    {footer && <Footer />}
  </body>
</html>