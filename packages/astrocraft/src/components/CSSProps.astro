---
import { fileURLToPath } from "node:url";
import { resolve, extname, dirname } from "node:path";
import fg from "fast-glob";

const assets = fg
  .globSync(["!minecraft-logo.png", "**/*.png"], {
    cwd: resolve(dirname(fileURLToPath(import.meta.url)), "../public/mc"),
  })
  .map(
    (asset) =>
      `--mc-${asset.slice(0, -extname(asset).length).replace(/\\+|\/+/g, "-")}: url("/mc/${asset}");`
  )
  .join('\n');
---

<style set:html={`:root{${assets}}`}/>